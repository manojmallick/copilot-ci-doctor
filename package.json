{
  "name": "copilot-ci-doctor",
  "version": "1.0.1",
  "description": "CLI tool that diagnoses GitHub Actions CI failures using GitHub Copilot CLI as the reasoning engine",
  "type": "module",
  "bin": {
    "copilot-ci-doctor": "./src/cli.js"
  },
  "files": [
    "src",
    "prompts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/cli.js",
    "test:bin": "node src/cli.js --help",
    "prepublishOnly": "npm run test:bin"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
